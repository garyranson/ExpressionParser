{
  "version": "2.2.1",
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es5",
    "module": "system",
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "typings/main"
  ]
}
